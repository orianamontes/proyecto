body 
    background-color #f6f6f6
    margin 0px
    display flex
    justify-content center
    align-items center

form 
    margin 0px
    .form-section
        text-align center
        font-size 1.5em
        font-weight 600
.box
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    width 500px
    .header
        background-image url('/static/images/logo.jpeg')
        background-repeat no-repeat
        background-size 100% 100%
        border-radius 8px 8px 0px 0px
        width 100%
        height 30%
    .inside
        padding 16px
    .footer
        padding 16px
        text-align center
        font-size 0.9em
        a
            text-decoration none
            color #CF0B3D
            font-weight 600
    .form-control
        box-shadow none
    .red-require
        font-weight: 600
        color #cf0b3d
    .btn-success
        width 100%
        border 1px solid #CF0B3D
        background-color #CF0B3D
        font-weight 600
        &:hover
        &:focus
        &:active
            border 1px solid#CF0B3D
            background-color #fff
            color #CF0B3D
            box-shadow none

.input-group-text
    height 38px

.mtop16
    margin-top 16px

.p5
    padding 1px 5px 3px 5px


body 
    background-color #f5f6f4
    font-size 14px
    font-family 'Roboto', sans-serif;

h2,h3,h4,h5,ul,body,html 
    padding 0
    margin 0

.wrapper
    min-height 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%

.sidebar
    background-color #fff
    min-height 100vh
    .section-top
        background-color #F097B5
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
    .logo
        display block
        margin 0px 0px 0px -10px
        padding-top 24px 
        width 110%
    .user
        color #fff 
        font-weight 600
        padding 0px 16px 16px 16px
        a 
            color #cf0b3e
            font-size 1.3em

.main
    font-weight 600
    display block
    margin-top 8px
    ul
        li
            margin-bottom 4px
            a 
                color #8998ac !important
                display block
                font-size 1.2em
                padding 12px 16px
                text-decoration none
                i 
                    margin-right 10px
                &:hover
                    background-color rgba(240, 151, 181, 0.5)
                    box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                    color #cf0b3e !important
.navbar
    background-color #F097B5
    a 
        color #fff !important
.page
    padding 16px 0
    .breadcrumb 
        background-color #fff
        padding 10px
        border-radius 5px
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
        .breadcrumb-item
            a 
                text-decoration none !important
                color #cf0b3e !important

.panel
    background-color #fff 
    border-radius 5px
    border-bottom 2px solid #cf0b3e
    width 100%
    .header
        border-bottom 1px solid #e8e8e8
        h2.title 
            display inline-block
            color #19213d
            font-size 1.1em
            padding 12px 16px
    .inside
            padding 16px

.opts
    align-content center
    a 
        border-radius 4px
        border 1px solid #cf0b3e
        display inline-block
        padding 8px 10px
        color #cf0b3e
        &:hover
            background-color #cf0b3e
            color #fff !important

.mtop12
    margin-top 12px


.p5
    padding 5px 5px 3px 5px
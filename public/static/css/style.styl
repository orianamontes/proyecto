color1 = #cf0b3e
color2 = #F097B5
color3 = rgba(240, 151, 181, 0.5)
color4= #E99601

body 
    background-color #f6f6f6
    font-size 14px
    font-family 'Roboto', sans-serif

nav 
    border-bottom 2px solid color1
    .navbar-brand
        img 
            width 200px
            height 70px
    .navbar-nav
        li.nav-item
            a.nav-link
                
                font-size 1.2em
                font-weight 700
                margin-right 4px
                padding 5px 16px !important
                color color1
                &:hover
                    color color4
            a.btn 
                border 1px solid color2
                color color1
                &:hover
                    background-color color1
                    border 1px solid color1
                    color #fff
                

        li.link-acc
        overflow hidden
        a  
            display inline-block
            float left
            margin-right 0px !important
            &:first-child
                border-radius 4px 0px 0px 4px
            &:last-child
                border-radius 0px 4px 4px 0px


.home_action_bar
    background-color #fff
    border-radius 4px
    margin-top 24px
    padding 12px
    .categorias
        a 
            background-color color1
            border-radius 4px
            color #fff
            display block
            padding 12px
            text-decoration none
            width 100%
                   
        ul  
            list-style none
            margin 0px
            padding 0px
            li 
                a
                    margin 2px 0px
                    background-color #fff
                    border-radius 0px
                    color color1
                    font-weight 600
                    &:hover
                        background-color color3
                        border-radius 4px
           
        

.carousel-indicators
    margin-top 20px

.collapse
    justify-content flex-end

.carousel-caption
    background-color rgba(0, 0, 0, 0.5);

